@page
@model Prueba.DigitalBank.Web.Pages.UsuarioConsultaModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
}
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-secondary">
                        <tr>
                            <th>Nombre</th>
                            <th>Fecha Nacimiento</th>
                            <th>Sexo</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model.Usuarios)
                        {
                            <tr>
                                <td>@u.Nombre</td>
                                <td>@u.FechaNacimiento.ToShortDateString()</td>
                                <td>@u.Sexo</td>
                                <td class="text-center">
                                    <!-- Botón Editar -->
                                    <a class="btn btn-sm btn-outline-primary me-1" asp-page="Usuario" asp-route-id="@u.Id">
                                        ✏️ Editar
                                    </a>

                                    <!-- Botón Eliminar -->
                                    <form method="post" asp-page-handler="Eliminar" asp-route-id="@u.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('¿Seguro que deseas eliminar este usuario?');">
                                            🗑 Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <a class="btn btn-outline-success" asp-page="Usuario">➕ Agregar nuevo usuario</a>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Mensaje))
{
    <p style="color:green">@Model.Mensaje</p>
}
