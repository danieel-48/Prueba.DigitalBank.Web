@page "{id?}"
@model Prueba.DigitalBank.Web.Pages.UsuarioModel
@{
    ViewData["Title"] = Model.NuevoUsuario.Id > 0 ? "Editar Usuario" : "Registrar Usuario";
}
<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-light">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="NuevoUsuario.Id" />

                <!-- Nombre -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre:</label>
                    <input asp-for="NuevoUsuario.Nombre" class="form-control" placeholder="Ingrese el nombre" required />
                </div>

                <!-- Fecha de Nacimiento -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Fecha de Nacimiento:</label>
                    <input asp-for="NuevoUsuario.FechaNacimiento" type="date" class="form-control"
                           value="@(Model.NuevoUsuario.FechaNacimiento == DateTime.MinValue ? DateTime.Today.ToString("yyyy-MM-dd") : Model.NuevoUsuario.FechaNacimiento.ToString("yyyy-MM-dd"))"
                           required />
                </div>

                <!-- Sexo -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Sexo:</label>
                    <select asp-for="NuevoUsuario.Sexo" class="form-select" required>
                        <option value="">Seleccione...</option>
                        <option value="M">Masculino</option>
                        <option value="F">Femenino</option>
                    </select>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <button type="submit" class="btn btn-outline-success btn-sm px-4">💾 Guardar</button>
                    <a asp-page="UsuarioConsulta" class="btn btn-outline-secondary btn-sm">← Volver a la lista</a>
                </div>

                <!-- Mensaje -->
                @if (!string.IsNullOrEmpty(Model.Mensaje))
                {
                    <div class="mt-3 alert alert-success" role="alert">
                        @Model.Mensaje
                    </div>
                }
            </form>
        </div>
    </div>
</div>
